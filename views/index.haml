%head
  %title Zero Punctuation
  %meta(charset="utf-8")
  %link(rel="stylesheet" href="style.css")

%h1 Zero Punctuation

#episode-list

  %h2 Latest

  %ol
    - latest_episodes.each do |episode|
      = render_episode(episode, :detailed)

  - episodes_by_year.each do |year, episodes|
    %h2= year
    %ol
      - episodes.each do |episode|
        = render_episode(episode)

